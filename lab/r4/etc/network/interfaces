auto lo
iface lo inet loopback

auto eth0
iface eth0 inet static
	address 1.1.255.6
	netmask 255.255.255.254

auto eth1
iface eth1 inet static
	address 1.1.255.1
	netmask 255.255.255.254

auto eth2
iface eth2 inet static
        address 1.1.255.5
        netmask 255.255.255.254

auto eth3
iface eth3 inet static
        address 1.0.2.1
        netmask 255.255.255.0
